{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build program",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceRoot}/main.cpp",
                "${workspaceRoot}/src/*.cpp",
                "-o",
                "${workspaceRoot}/build/program"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "Run build program",
            "command": "${workspaceRoot}/build/program",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "type": "shell",
            "label": "Build and Run build program",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Build program",
                "Run build program",
            ],
            "dependsOrder": "sequence"
        }
    ]
}