{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build main file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceRoot}/main.cpp",
                "${workspaceRoot}/src/*.cpp",
                "-o",
                "${workspaceRoot}/build/program"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}